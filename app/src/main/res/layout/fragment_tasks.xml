<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="34dp"
        android:text="TASKS"
        android:textColor="#3d3d3d"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        app:layout_constraintBottom_toTopOf="@id/container_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <TextView
            android:id="@+id/tv_title_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"
            android:text="Retelling of the text"
            android:textColor="#3d3d3d"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle_one"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"
            android:text="I select texts for you, and your task is to make a short retelling"
            android:textColor="#3d3d3d"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/tv_title_one"
            app:layout_constraintTop_toBottomOf="@id/tv_title_one" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_retelling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start lesson"
            app:layout_constraintStart_toStartOf="@id/tv_subtitle_one"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_one" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_one">

        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"
            android:text="TED Talks"
            android:textColor="#3d3d3d"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle_two"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"
            android:text="Let's watch TED Talks together and I'll ask you some questions after"
            android:textColor="#3d3d3d"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/tv_title_two"
            app:layout_constraintTop_toBottomOf="@id/tv_title_two" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_ted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start lesson"
            app:layout_constraintStart_toStartOf="@id/tv_subtitle_two"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_two" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
